<!-- Sign up section -->
	<%= form_for(@member, url: signuplogin_path) do |m|%>
      	<%= render "shared/error_msgs" %>
      	
      	<p>
			<%= m.label :acct_type %><br/>
			<%= m.radio_button :acct_type, "e" %> Editor &nbsp;
			<%= m.radio_button :acct_type, "w" %> Writer &nbsp;
			<%= m.radio_button :acct_type, "n" %> Just visiting <br/>
		</p>

		<p>
			<%= m.label :first_name %><br>
			<%= m.text_field :first_name %>
		</p>
		<p>
			<%= m.label :last_name %><br>
			<%= m.text_field :last_name %>
		</p>
		<p>
			<%= m.label :alter_ego %><br>
			<%= m.text_field :alter_ego %>
		</p>
		<p>
			<%= m.label :email %><br>
			<%= m.email_field :email %>
		</p>
		<p>
			<%= m.label :password %><br>
			<%= m.password_field :password %>
		</p>
		<p>
			<%= m.label :password_confirmation %><br>
			<%= m.password_field :password_confirmation %>
		</p>
		<p>
			<%= m.label :tagline %><br>
			<%= m.text_area :tagline %>
		</p>
		<p>
			<%= m.label :aboutme %><br>
			<%= m.text_field :aboutme %>
		</p>
		<p>
			<%= m.label :avatar %><br>
			<%= m.url_field :avatar %>
		</p>
		<p>
			<%= m.label :location %><br>
			<%= m.text_field :location %>
		</p>
		<p>
			<%= m.label :fav_style_manual %><br>
			<%= m.text_area :fav_style_manual %>
		</p>
		<p>
			<%= m.label :education %><br>
			<%= m.text_field :education %>
		</p>
		<p>
			<%= m.label :fav_advice %><br>
			<%= m.text_area :fav_advice %>
		</p>
		<p>
			<%= m.submit %>
		</p>
	<% end %>