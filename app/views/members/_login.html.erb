<!-- Log in section -->
<% if @member %>
	<%= form_tag("login", method: "patch") do %>
		<% if @member.errors.any? %>
			<div class="error_messages">
				<h2>Try entering your information again because</h2>
				<ul>
					<% for message in @member.errors.full_messages %>
						<li><%= message %></li>
					<% end %>
				</ul>
			</div>
		<% end %>

	    <%= label_tag(:alter_ego, "Alter ego (username):") %>
			<%= text_field_tag(:alter_ego, "", maxlength: 20, required: "required") %><br/>
		<br/>
	    <%= label_tag(:password_digest, "Password:") %>
	    	<%= password_field_tag(:password_digest, "", minlength: 8, maxlength: 30, required: "required") %><br/>
	    <br/>
	    <%= submit_tag("Log in") %>
	<% end %>
<% else %>
		<p>Looks like you're already a member. Come right on in!</p>
<% end %>